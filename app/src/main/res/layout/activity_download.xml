<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/download_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件名称：" />

    <ProgressBar
        android:id="@+id/download_file_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_file_name"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/download_file_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/download_file_progress"
        android:layout_marginTop="8dp"
        android:text="开始" />

    <Button
        android:id="@+id/download_file_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_file_progress"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/download_file_start"
        android:text="停止" />

</RelativeLayout>
